<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>Eprint Admin</portlet-name>
		<display-name>Eprint Repository Admin</display-name>
		<portlet-class>
			com.idetronic.eprint.admin.EprintAdmin
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/eprint/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/eprint/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<supported-locale>en_GB</supported-locale>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Eprint Admin</title>
			<short-title>Eprint Admin</short-title>
			<keywords></keywords>
		</portlet-info>
		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
	<portlet>
		<portlet-name>eprintview</portlet-name>
		<display-name>Eprint Viewer</display-name>
		<portlet-class>com.idetronic.eprint.EprintView</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/eprintview/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/eprintview/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Eprint View</title>
			<short-title>Eprint View</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>